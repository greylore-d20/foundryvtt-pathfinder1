<section class="widget-content">
  <div class="item-picker-categories">
    {{#each categories}}
      <div class="category {{#if validity.valid}}valid{{else}}invalid{{/if}}" data-category="{{key}}"
        {{#unless validity.valid}}data-tooltip="PF1.Application.ChangeTargetSelector.InvalidChoice"{{/unless}}>
        {{label}}
        {{#unless validity.valid}}<i class="warning fa-solid fa-triangle-exclamation"></i>{{/unless}}
      </div>
    {{/each}}
  </div>

  <div class="item-picker-items">
    {{#each items}}
      <div class="item hidden {{#if validity.valid}}valid{{else}}invalid{{/if}}" data-category="{{category}}" data-value="{{key}}"
        {{#unless validity.valid}}data-tooltip="PF1.Application.ChangeTargetSelector.InvalidChoice"{{/unless}}>
        {{label}}
        {{#unless validity.valid}}<i class="warning fa-solid fa-triangle-exclamation"></i>{{/unless}}
      </div>
    {{/each}}
  </div>
</section>
