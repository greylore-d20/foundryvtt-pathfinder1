        "formula": "if (d.shield.type < 1 && d.armor.type < 1 && d.attributes.encumbrance.level < 1) {\n    result.value = d.abilities.wis.mod;\n}",
        "operator": "script",
        "subTarget": "ac",
        "modifier": "untyped"
      },
