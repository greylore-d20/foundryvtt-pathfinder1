<form autocomplete="off" data-tooltip-class="pf1">
  <header>
    <a href="{{link}}">{{localize "PF1.Application.Changelog.OpenInBrowser"}}</a>
  </header>

  <nav class="tabs" data-group="primary">
    <a class="item" data-tab="latest">{{localize "PF1.Application.Changelog.Latest" version=changelog.version}}</a>
    <a class="item" data-tab="major">{{localize "PF1.Application.Changelog.Major" major=changelog.version.major}}</a>
    {{#if changelog.legacy.content}}
    <a class="item" data-tab="legacy">{{localize "PF1.Application.Changelog.Legacy"}}</a>
    {{/if}}
  </nav>

  <section class="content">
    {{#with changelog}}
    <div class="tab latest" data-group="primary" data-tab="latest">
      {{{latest.content}}}
    </div>
    <div class="tab major" data-group="primary" data-tab="major">
      {{{latest.content}}}
      {{{major.content}}}
    </div>
    {{#if legacy.content}}
    <div class="tab legacy" data-group="primary" data-tab="legacy">
      {{{legacy.content}}}
    </div>
    {{/if}}
    {{/with}}
  </section>

  <footer>
    <label class="checkbox">
      <input type="checkbox" name="dontShowAgain" {{checked dontShowAgain}}>
      {{localize "PF1.Application.Changelog.DontShowAgain"}}
    </label>
  </footer>
</form>
