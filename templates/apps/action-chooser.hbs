<div class="pf1 action-chooser">
  <h2>{{localize "PF1.ChooseAnAction"}}</h2>

  <div class="actions">
    {{#each actions as |action|}}
    <div class="action" data-action="{{action._id}}">
      <img src="{{action.img}}">
      <span class="name">{{action.name}}</span>
    </div>
    {{/each}}
  </div>
</div>