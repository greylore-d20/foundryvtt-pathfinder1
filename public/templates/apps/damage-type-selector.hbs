{{#*inline "damagetype"}}
<div class="damage-type{{#if enabled}} toggled{{/if}}" data-id="{{id}}">
  {{!-- Icon --}}
  {{#if icon}}
  <i class="{{icon}} icon-pf" style="color: {{color}}"></i>
  {{else}}
  <img class="icon" src="{{img}}">
  {{/if}}
  {{!-- Name --}}
  <span class="name">{{name}}</span>
  <input type="checkbox" {{checked enabled}}>
</div>
{{/inline}}

<form class="pf1 damage-type-selector" data-tooltip-class="pf1" autocomplete="off">
  <div class="flexrow damage-type-container">
    <div class="flexcol damage-type-categories">
      {{#each damageCategories as |category categoryKey|}}
      <div class="damage-types" data-category="{{categoryKey}}">
        <label>{{localize category.label}}</label>
        <div class="icon-row">
          {{#each category.types}}
          {{> "damagetype"}}
          {{/each}}
        </div>
      </div>
      {{/each}}
    </div>

    <div class="damage-modifiers">
      <label>{{localize "PF1.DamageModifiers"}}</label>
      <div class="icon-row">
        {{#each damageModifiers}}
        {{> "damagetype"}}
        {{/each}}
      </div>
    </div>
  </div>

  <div class="flexrow misc-container">
    <div class="form-group custom">
      <label>{{localize "PF1.Custom"}}</label>
      <input type="text" name="custom" value="{{@root.damage.custom}}">
    </div>
  </div>

  <button type="submit" name="submit">
    <i class="far fa-save"></i>
    {{localize "Save"}}
  </button>
</form>
