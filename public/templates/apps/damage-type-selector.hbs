{{#*inline "damagetype"}}
  <div class="damage-type{{#if enabled}} toggled{{/if}}" data-action="toggleDamageType" data-id="{{id}}">
    {{!-- Icon --}}
    {{#if icon}}
      <i class="{{icon}} icon-pf" style="color: {{color}}"></i>
    {{else}}
      <img class="icon" src="{{img}}">
    {{/if}}
    {{!-- Name --}}
    <span class="name">{{name}}</span>
    <input type="checkbox" {{checked enabled}}>
  </div>
{{/inline}}

<section class="form-body">
  <div class="damage-type-container">
    <div class="damage-type-categories">
      {{#each damageCategories as |category categoryKey|}}
        <div class="damage-types" data-category="{{categoryKey}}">
          <label>{{localize category.label}}</label>
          <div class="icon-row">
            {{#each category.types}}
              {{> "damagetype"}}
            {{/each}}
          </div>
        </div>
      {{/each}}
    </div>

    <div class="damage-modifiers">
      <label>{{localize "PF1.DamageModifiers"}}</label>
      <div class="icon-row">
        {{#each damageModifiers}}
          {{> "damagetype"}}
        {{/each}}
      </div>
    </div>
  </div>

  <div class="misc-container">
    <div class="form-group custom">
      <label>{{localize "PF1.Custom"}}</label>
      <input type="text" name="custom" value="{{@root.damage.custom}}">
    </div>
  </div>
</section>
