<div class="tab" data-group="primary" data-tab="description">
  {{#if showIdentifyDescription}}
  <nav class="sheet-navigation tabs subtabs description" data-group="description">
    <a class="item" data-tab="identified">{{localize "PF1.Identified"}}</a>
    <a class="item" data-tab="unidentified">{{localize "PF1.Unidentified"}}</a>
  </nav>
  {{/if}}

  <div class="flexrow description-container">
    <div class="item-properties">
      {{#each descriptionAttributes as |attr|}}
      {{#if attr.isBoolean}}
      <div class="form-group">
        <label>{{attr.label}}</label>
        <input type="checkbox" name="{{attr.name}}" {{checked attr.value}} {{disabled disabled}}>
      </div>
      {{else if attr.isNumber}}
      <div class="form-group">
        <label>{{attr.label}}</label>
        <input data-action="input-text" name="{{attr.name}}" class="select-on-click" type="number" readonly data-dtype="Number"
          value="{{numberFormat attr.value decimals=attr.decimals}}"
          {{#if attr.fakeValue}}data-input-value="{{attr.inputValue}}"{{/if}}
          {{disabled disabled}}>
      </div>
      {{else if attr.isString}}
      <div class="form-group">
        <label>{{attr.label}}</label>
        <input data-action="input-text" name="{{attr.name}}" type="text" readonly value="{{attr.value}}" {{disabled disabled}}>
      </div>
      {{else if attr.isRange}}
      <div class="form-group range-value">
        <label>{{attr.label}}</label>
        {{!-- Value --}}
        <input class="select-on-click" name="{{attr.value.name}}" type="number" data-dtype="Number" readonly value="{{attr.value.value}}">
        <span class="separator">/</span>
        {{!-- Max --}}
        <input data-action="input-text" class="select-on-click" name="{{attr.max.name}}" type="text" data-dtype="Number" readonly value="{{attr.max.value}}">
      </div>
      {{/if}}
      {{/each}}

      {{!-- Properties --}}
      <ol class="properties-list">
        {{#each itemProperties}}
        <li>{{this}}</li>
        {{/each}}
      </ol>
    </div>

    {{#if showIdentifyDescription}}
    <section class="description-body">
      <div class="tab description-group flexcol" data-group="description" data-tab="identified">
      {{editor descriptionHTML.identified target="system.description.value" button=true editable=editable engine="prosemirror" collaborate=false}}
      </div>

      <div class="tab description-group flexcol" data-group="description" data-tab="unidentified">
      {{editor descriptionHTML.unidentified target="system.description.unidentified" button=true editable=editable engine="prosemirror" collaborate=false}}
      </div>
    </section>
    {{else}}
    {{#if showUnidentifiedData}}
    {{editor descriptionHTML.unidentified target="system.description.unidentified" button=true editable=editable engine="prosemirror" collaborate=false}}
    {{else}}
    {{editor descriptionHTML.identified target="system.description.value" button=true editable=editable engine="prosemirror" collaborate=false}}
    {{/if}}
    {{/if}}
  </div>
</div>
