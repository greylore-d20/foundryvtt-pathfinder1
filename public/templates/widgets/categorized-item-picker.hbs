<div class="widget categorized-item-picker">
  <div class="item-picker-categories">
    {{#each categories}}
      <div class="category {{#if validity.valid}}valid{{else}}invalid{{/if}}"
        {{#unless validity.valid}}data-tooltip="PF1.Application.ChangeTargetSelector.InvalidChoice"{{/unless}}>
        <a data-category="{{key}}"><h2>{{label}}</h2></a>
        {{#unless validity.valid}}<i class="warning fa-solid fa-triangle-exclamation"></i>{{/unless}}
      </div>
    {{/each}}
  </div>

  <div class="item-picker-items">
    {{#each items}}
      <span class="item hidden {{#if validity.valid}}valid{{else}}invalid{{/if}}" data-category="{{category}}" data-value="{{key}}"
        {{#unless validity.valid}}data-tooltip="PF1.Application.ChangeTargetSelector.InvalidChoice"{{/unless}}>
        <h4>{{label}}</h4>
        {{#unless validity.valid}}<i class="warning fa-solid fa-triangle-exclamation"></i>{{/unless}}
      </span>
    {{/each}}
  </div>
</div>
