<div class="tab flexcol" data-group="primary" data-tab="description">
  {{#if showIdentifyDescription}}
  <nav class="sheet-navigation tabs subtabs description" data-group="description">
    <a class="item" data-tab="identified">{{localize "PF1.Identified"}}</a>
    <a class="item" data-tab="unidentified">{{localize "PF1.Unidentified"}}</a>
  </nav>
  {{/if}}

  <div class="flexrow description-container">
    <div class="item-properties">
      {{#if isPhysical}}
      {{#unless descriptionAttributes}}
      {{!-- Quantity --}}
      <div class="form-group">
        <label>{{localize "PF1.Quantity"}}</label>
        <input class="select-on-click" type="text" name="system.quantity" value="{{system.quantity}}" data-dtype="Number"/>
      </div>

      {{!-- Weight --}}
      <div class="form-group">
        <label>{{localize "PF1.Weight"}} ({{system.weight.units}})</label>
        <input class="select-on-click" type="text" name="system.weight.converted" value="{{numberFormat system.weight.converted decimals=2}}" data-dtype="Number"/>
      </div>

      {{!-- Price --}}
      {{#if showIdentifyDescription}}
      <div class="form-group">
        <label>{{localize "PF1.Price"}} ({{system.priceUnits}})</label>
        <input class="select-on-click" type="text" name="system.price" value="{{numberFormat system.price decimals=2}}" data-dtype="Number"/>
      </div>

      <div class="form-group">
        <label>{{localize "PF1.UnidentifiedPriceShort"}}</label>
        <input class="select-on-click" type="text" name="system.unidentified.price" value="{{numberFormat system.unidentified.price decimals=2}}" data-dtype="Number"/>
      </div>
      {{else}}
      {{#if showUnidentifiedData}}
      <div class="form-group">
        <label>{{localize "PF1.Price"}} ({{system.priceUnits}})</label>
        <input class="select-on-click" type="text" name="system.unidentified.price" value="{{system.unidentified.price}}" data-dtype="Number"/>
      </div>
      {{else}}
      <div class="form-group">
        <label>{{localize "PF1.Price"}} ({{system.priceUnits}})</label>
        <input class="select-on-click" type="text" name="system.price" value="{{system.price}}" data-dtype="Number"/>
      </div>
      {{/if}}
      {{/if}}

      {{!-- Hit Points --}}
      <div class="form-group">
        <label>{{localize "PF1.HPShort"}}</label>
        <input class="select-on-click" type="text" name="system.hp.value" value="{{system.hp.value}}" data-dtype="Number" style="flex: 0 0 32px"/>
        <span>/</span>
        <input class="select-on-click" type="text" name="system.hp.max" value="{{system.hp.max}}" data-dtype="Number" style="flex: 0 0 32px"/>
      </div>

      {{!-- Hardness --}}
      <div class="form-group">
        <label>{{localize "PF1.Hardness"}}</label>
        <input class="select-on-click" type="text" name="system.hardness" value="{{system.hardness}}" data-dtype="Number"/>
      </div>

      {{!-- Carried Flag --}}
      <div class="form-group">
        <label>{{localize "PF1.Carried"}}</label>
        <input type="checkbox" name="system.carried" {{checked system.carried}}/>
      </div>
      {{else}}
      {{#each descriptionAttributes as |attr|}}
      {{#if attr.isBoolean}}
      <div class="form-group">
        <label>{{attr.label}}</label>
        <input type="checkbox" name="{{attr.name}}" {{checked attr.value}}/>
      </div>
      {{/if}}
      {{#if attr.isNumber}}
      <div class="form-group">
        <label>{{attr.label}}</label>
        {{#if attr.fakeName}}
          <div data-action="input-text" data-for=".{{attr.id}}-description-input" data-attr-name="{{attr.name}}" {{#if (or attr.inputValue (eq attr.inputValue 0))}}data-input-value="{{attr.inputValue}}"{{/if}}>
          <input class="{{#if attr.id}}{{attr.id}}-description-input{{/if}}" type="number" readonly data-dtype="Number" value="{{numberFormat attr.value decimals=attr.decimals}}"/>
        </div>
        {{else}}
        <input class="{{#if attr.id}}{{attr.name}}-description-input{{/if}} select-on-click" name="{{attr.name}}" type="number" data-dtype="Number" value="{{numberFormat attr.value decimals=attr.decimals}}"/>
        {{/if}}
      </div>
      {{/if}}
      {{#if attr.isString}}
      <div class="form-group">
        <label>{{attr.label}}</label>
        {{#if attr.fakeName}}
        <div data-action="input-text" data-for=".{{attr.id}}-description-input" data-attr-name="{{attr.name}}">
          <input class="{{#if attr.id}}{{attr.name}}-description-input{{/if}}" type="text" readonly value="{{attr.value}}"/>
        </div>
        {{else}}
        <input class="{{#if attr.id}}{{attr.name}}-description-input{{/if}}" name="{{attr.name}}" type="text" value="{{attr.value}}"/>
        {{/if}}
      </div>
      {{/if}}
      {{#if attr.isRange}}
        <div class="form-group">
          <label>{{attr.label}}</label>
          {{!-- Value --}}
          {{#if attr.value.fakeName}}
            <div data-action="input-text" data-for=".{attr.value.id}}-description-input" data-attr-name="{{attr.value.name}}">
              <input class="{{#if attr.value.id}}{{attr.value.name}}-description-input{{/if}}" type="text" readonly value="{{attr.value.value}}"/>
            </div>
          {{else}}
            <input class="{{#if attr.value.id}}{{attr.value.name}}-description-input{{/if}} select-on-click" name="{{attr.value.name}}" type="text" value="{{attr.value.value}}"/>
          {{/if}}
          <span>/</span>
          {{!-- Max --}}
          {{#if attr.max.fakeName}}
            <div data-action="input-text" data-for=".{attr.max.id}}-description-input" data-attr-name="{{attr.max.name}}">
              <input class="{{#if attr.max.id}}{{attr.max.name}}-description-input{{/if}}" type="text" readonly value="{{attr.max.value}}"/>
            </div>
          {{else}}
            <input class="{{#if attr.max.id}}{{attr.max.name}}-description-input{{/if}} select-on-click" name="{{attr.max.name}}" type="text" value="{{attr.max.value}}"/>
          {{/if}}
        </div>
      {{/if}}
      {{/each}}
      {{/unless}}
      {{/if}}

      {{!-- Properties --}}
      <ol class="properties-list">
        {{#each itemProperties}}
        <li>{{this}}</li>
        {{/each}}
      </ol>
    </div>

    {{#if showIdentifyDescription}}
    <section class="description-body">
      <div class="tab description-group flexcol" data-group="description" data-tab="identified">
      {{roll-editor content=system.description.value target="system.description.value" button=true owner=owner editable=editable}}
      </div>

      <div class="tab description-group flexcol" data-group="description" data-tab="unidentified">
      {{roll-editor content=system.description.unidentified target="system.description.unidentified" button=true owner=owner editable=editable}}
      </div>
    </section>
    {{else}}
    {{#if showUnidentifiedData}}
    {{roll-editor content=system.description.unidentified target="system.description.unidentified" button=true owner=owner editable=editable}}
    {{else}}
    {{roll-editor content=system.description.value target="system.description.value" button=true owner=owner editable=editable}}
    {{/if}}
    {{/if}}
  </div>
</div>
