<form autocomplete="off">
  {{#if noSystemVision}}
  <p class="warning">
    <i class="fa-solid fa-triangle-exclamation"></i>
    {{localize "PF1.CustomVisionRules.Warning"}}
  </p>
  {{/if}}
  {{!-- Low Light vision --}}
  <div class="form-group">
    <label>{{localize "TOKEN.VisionLowLight"}}</label>
    <div class="form-fields">
      <input type="checkbox" name="system.traits.senses.ll.enabled" data-dtype="Boolean" {{checked senses.ll.enabled}}>
    </div>
  </div>

  {{!-- Low Light vision multiplier --}}
  <div class="form-group slim">
    <label>{{localize "TOKEN.VisionLowLightMultiplier"}}</label>
    <div class="form-fields">
      <label class="header">{{localize "LIGHT.Dim"}}</label>
      <input type="number" data-dtype="Number" name="system.traits.senses.ll.multiplier.dim" value="{{senses.ll.multiplier.dim}}" min="0" placeholder="2">
      <label class="header">{{localize "LIGHT.Bright"}}</label>
      <input type="number" data-dtype="Number" name="system.traits.senses.ll.multiplier.bright" value="{{senses.ll.multiplier.bright}}" min="0" placeholder="2">
    </div>
  </div>

  {{!-- Darkvision --}}
  <div class="form-group">
    <label>{{localize "PF1.Sense.darkvision"}} <span class="units">({{gridUnits}})</span></label>
    <div class="form-fields">
      <input type="number" data-dtype="Number" name="system.traits.senses.dv" value="{{senses.dv}}" min="0" placeholder="0">
    </div>
  </div>

  {{!-- Tremorsense --}}
  <div class="form-group">
    <label>{{localize "PF1.Sense.tremorsense"}} <span class="units">({{gridUnits}})</span></label>
    <div class="form-fields">
      <input type="number" data-dtype="Number" name="system.traits.senses.ts" value="{{senses.ts}}"  min="0" placeholder="0">
    </div>
  </div>

  {{!-- Blindsense --}}
  <div class="form-group">
    <label>{{localize "PF1.Sense.blindsense"}} <span class="units">({{gridUnits}})</span></label>
    <div class="form-fields">
      <input type="number" data-dtype="Number" name="system.traits.senses.bse" value="{{senses.bse}}" min="0" placeholder="0">
    </div>
  </div>

  {{!-- Blindsight --}}
  <div class="form-group">
    <label>{{localize "PF1.Sense.blindsight"}} <span class="units">({{gridUnits}})</span></label>
    <div class="form-fields">
      <input type="number" data-dtype="Number" name="system.traits.senses.bs" value="{{senses.bs}}" min="0" placeholder="0">
    </div>
  </div>

  {{!-- Scent --}}
  <div class="form-group">
    <label>{{localize "PF1.Sense.scent"}}*</label>
    <div class="form-fields">
      <input type="number" data-dtype="Number" name="system.traits.senses.sc" value="{{senses.sc}}" min="0" placeholder="0">
    </div>
  </div>

  {{!-- See invisibility --}}
  <div class="form-group">
    <label>{{localize "PF1.Sense.seeInvis"}}</label>
    <div class="form-fields">
      <input type="checkbox" data-dtype="Boolean" name="system.traits.senses.si" {{checked senses.si}}>
    </div>
  </div>

  {{!-- Truesight --}}
  <div class="form-group">
    <label>{{localize "PF1.Sense.truesight"}}</label>
    <div class="form-fields">
      <input type="checkbox" data-dtype="Boolean" name="system.traits.senses.tr" {{checked senses.tr}}>
    </div>
  </div>

  {{!-- See in darkness --}}
  <div class="form-group">
    <label>{{localize "PF1.Sense.seeInDark"}}*</label>
    <div class="form-fields">
      <input type="checkbox" data-dtype="Boolean" name="system.traits.senses.sid" {{checked senses.sid}}>
    </div>
  </div>

  {{!-- Custom --}}
  <div class="form-group">
    <label>{{localize "PF1.Custom"}}</label>
    <div class="form-fields">
      <input type="text" data-dtype="String" name="system.traits.senses.custom" value="{{senses.custom}}">
    </div>
  </div>

  <p class="footnote">* {{localize "PF1.Info.NotFunctioning"}}</p>

  <button type="submit" name="submit"><i class="far fa-save"></i> {{localize "Save"}}</button>
</form>
