<label>{{localize "PF1.Dialog.SplitItem.Desc"}}</label>

<div class="flexrow stacks">
  <div class="stack-size">
    <label>{{localize "PF1.Dialog.SplitItem.Keep"}}</label>
    <input type="number" value="{{max}}" min="1" step="1" max="{{max}}" class="left" placeholder="1" required>
  </div>

  <div class="stack-drag">
    <label></label>
    <input type="range" value="1" min="1" step="1" max="{{max}}" class="slider">
  </div>

  <div class="stack-size">
    <label>{{localize "PF1.Dialog.SplitItem.Split"}}</label>
    <input type="number" name="value" value="1" min="1" step="1" max="{{max}}" class="split" placeholder="1" required>
  </div>
</div>
<hr>
