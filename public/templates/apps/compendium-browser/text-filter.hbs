{{#each filter.choices as |choice i|}}
  <div class="form-group input">
    {{#if choice.label}}
      <label for="filter-{{../id}}-choice-{{choice.key}}">{{choice.label}}</label>
    {{/if}}
    <div class="form-fields">
      <input
        {{#if choice.type}}
          type="{{choice.type}}"
        {{else}}
          type="text"
        {{/if}}
        name="filter.{{../id}}.choice.{{choice.key}}"
        value="{{choice.value}}"
        placeholder="{{choice.placeholder}}"
        id="filter-{{../id}}-choice-{{choice.key}}"
      >
    </div>
  </div>
{{/each}}
