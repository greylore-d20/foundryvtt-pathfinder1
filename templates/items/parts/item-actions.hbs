{{!-- Inline Action --}}
{{#*inline "listAction"}}
  <li class="action-part item flexrow" data-item-id="{{action._id}}" data-item-collection="actions">
    <div class="item-name flexrow">
      <div class="item-image no-hover" style='background-image: url("{{action.img}}")'></div>
      <h4>{{action.name}}</h4>
    </div>
    <div class="action-controls item-controls">
      <a class="edit-action" title="{{localize "PF1.EditItem"}}"><i class="fas fa-edit"></i></a>
      <a class="duplicate-action" title="{{localize "PF1.DuplicateItem"}}"><i class="fas fa-copy"></i></a>
      <a class="delete-action" title="{{localize "PF1.DeleteItem"}}"><i class="fas fa-trash"></i></a>
    </div>
  </li>
{{/inline}}

{{!-- Actions --}}
<div class="actions">
  <ol class="inventory-list action-parts">
    {{!-- Header --}}
    <li class="inventory-header flexrow">
      <h3 class="item-name flexrow">{{localize "PF1.ActionPlural"}}</h3>
      <div class="action-controls item-controls">
        <a class="action-control add-action">
          <i class="fas fa-plus"></i>
        </a>
      </div>
    </li>

    {{!-- Action list --}}
    <ol class="items-list">
      {{#each data.actions as |action i|}}{{> listAction action=action i=i}}{{/each}}
    </ol>
  </ol>
</div>

{{!-- Limited Uses --}}
{{#unless isSpell}}
<div class="form-group uses-per">
  <label>{{localize "PF1.LimitedUses"}}</label>
  <div class="form-fields">
    {{#if isCharged}}
    <input type="text" name="data.uses.value" value="{{data.uses.value}}" data-dtype="Number"/>
    <span class="sep"> / </span>
    <input type="text" value="{{data.uses.max}}" disabled data-dtype="Number"/>
    {{/if}}
    <select name="data.uses.per">
      {{#select data.uses.per}}
      <option value=""></option>
      {{#each config.limitedUsePeriods as |name key|}}
      <option value="{{key}}">{{name}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>
</div>
{{#if isCharged}}
<div class="form-group uses-per">
  <input class="formula" type="text" name="data.uses.maxFormula" value="{{data.uses.maxFormula}}" placeholder="{{localize "PF1.MaximumUsesFormula"}}"/>
</div>
{{#if isPhysical}}
  <div class="form-group">
    <label>{{localize "PF1.PricePerCharge"}}</label>
    <input type="text" name="data.uses.pricePerUse" value="{{data.uses.pricePerUse}}" placeholder="0" type="Number"/>
  </div>
{{/if}}
{{/if}}
{{/unless}}

{{#if hasAction}}
{{!-- Attack Notes --}}
<div class="form-group stacked notes attack" data-name="data.attackNotes">
  <table>
    <thead>
      <th>{{localize "PF1.AttackNotes"}}</th>
      <th class="entry-control"><a class="add-entry"><i class="fas fa-plus"></i></a></th>
    </thead>
    <tbody>
      {{#each data.attackNotes as |entry index|}}
      <tr class="entry" data-index="{{index}}">
        <td class="nocenter"><input type="text" data-index="{{k}}" value="{{entry}}" name="data.attackNotes.{{index}}" /></td>
        <td class="entry-control"><a class="delete-entry"><i class="fas fa-minus"></i></a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{!-- Effect Notes --}}
<div class="form-group stacked notes effect" data-name="data.effectNotes">
  <table>
    <thead>
      <th>{{localize "PF1.EffectNotes"}}</th>
      <th class="entry-control"><a class="add-entry"><i class="fas fa-plus"></i></a></th>
    </thead>
    <tbody>
      {{#each data.effectNotes as |entry index|}}
      <tr class="entry" data-index="{{index}}">
        <td class="nocenter"><input type="text" data-index="{{k}}" value="{{entry}}" name="data.effectNotes.{{index}}" /></td>
        <td class="entry-control"><a class="delete-entry"><i class="fas fa-minus"></i></a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{/if}}