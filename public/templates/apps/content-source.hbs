<form autocomplete="off">
	<div class="form-group">
		<label>{{localize "PF1.ContentSource.Info.Title"}}</label>
		<div class="form-fields" {{#if registry}}data-tooltip="PF1.ContentSource.Autofill"{{/if}}>
      <input name="system.source.title" type="text"
        {{#if registry}}
        value="{{registry.name}}" readonly
        {{else}}
			  value="{{system.source.title}}" placeholder="{{localize "PF1.ContentSource.Info.TitleHint"}}"
        {{/if}}
        >
		</div>
	</div>
	<div class="form-group">
		<label>{{localize "PF1.ContentSource.Info.Edition"}}</label>
		<div class="form-fields">
			<input name="system.source.edition" type="number" data-dtype="Number" value="{{system.source.edition}}" placeholder="{{localize "PF1.ContentSource.Info.EditionHint"}}">
		</div>
	</div>
	<div class="form-group">
		<label>{{localize "PF1.ContentSource.Info.Pages"}}</label>
		<div class="form-fields">
			<input name="system.source.pages" type="text" value="{{system.source.pages}}" placeholder="{{localize "PF1.ContentSource.Info.PagesHint"}}">
		</div>
	</div>
	<div class="form-group">
		<label>{{localize "PF1.ContentSource.Info.ID"}}</label>
		<div class="form-fields">
			<input name="system.source.id" type="text" value="{{system.source.id}}" placeholder="{{localize "PF1.ContentSource.Info.IDHint"}}" list="{{uuid}}-content-sources">
		</div>
	</div>
	<div class="form-group">
		<label>{{localize "PF1.ContentSource.Info.Errata"}}</label>
		<div class="form-fields">
			<input name="system.source.errata" type="text" value="{{system.source.errata}}" placeholder="{{localize "PF1.ContentSource.Info.ErrataHint"}}">
		</div>
	</div>
	<div class="form-group">
		<label>{{localize "PF1.ContentSource.Info.Publisher"}}</label>
		<div class="form-fields" {{#if registry}}data-tooltip="PF1.ContentSource.Autofill"{{/if}}>
      <input name="system.source.publisher" type="text"
        {{#if registry}}
        value="{{registry.publisher}}" readonly
        {{else}}
        value="{{system.source.publisher}}" placeholder="{{localize "PF1.ContentSource.Info.PublisherHint"}}"
        {{/if}}
        >
		</div>
	</div>

  <datalist id="{{uuid}}-content-sources">
    {{#each sources}}
    <option value="{{id}}">{{name}}</option>
    {{/each}}
  </datalist>
</form>
