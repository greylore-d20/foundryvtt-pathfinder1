{{!-- Template Type --}}
<div class="form-group select">
  <label>{{localize "PF1.TemplateType"}}</label>
  <select name="measureTemplate.type">
    {{selectOptions config.measureTemplateTypes selected=data.measureTemplate.type blank=""}}
  </select>
</div>

{{#if data.measureTemplate.type}}
{{!-- Template Size --}}
<div class="form-group">
  <label>{{localize "PF1.TemplateSizeFormula"}}</label>
  <div class="form-fields">
    <input class="formula" type="text" name="measureTemplate.size" value="{{data.measureTemplate.size}}" placeholder="{{localize "PF1.Formula"}}" />
  </div>
  <p class="hint">{{localize "PF1.TemplateSizeFormulaHint"}}</p>
</div>

{{!-- Override Color --}}
<div class="form-group stacked">
  <label class="checkbox">
    <input type="checkbox" name="measureTemplate.overrideColor" {{checked data.measureTemplate.overrideColor}}/> {{localize "PF1.OverrideColor"}}
  </label>
  <label class="checkbox">
    <input type="checkbox" name="measureTemplate.overrideTexture" {{checked data.measureTemplate.overrideTexture}}/> {{localize "PF1.OverrideTexture"}}
  </label>
</div>

{{#if data.measureTemplate.overrideColor}}
<div class="form-group">
  <label>{{localize "PF1.CustomColor"}}</label>
  <div class="form-fields">
    <input class="color" type="text" name="measureTemplate.customColor" value="{{data.measureTemplate.customColor}}" />
    <input type="color" value="{{data.measureTemplate.customColor}}" data-edit="measureTemplate.customColor" />
  </div>
</div>
{{/if}}

{{#if data.measureTemplate.overrideTexture}}
<div class="form-group">
  <label>{{localize "PF1.CustomTexture"}}</label>
  <div class="form-fields">
    <input class="image" type="text" name="measureTemplate.customTexture" placeholder="path/image.png" value="{{data.measureTemplate.customTexture}}"/>
    {{filePicker target="measureTemplate.customTexture" type="imagevideo"}}
  </div>
</div>
{{/if}}
{{/if}}
