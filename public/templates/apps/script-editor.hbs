<form class="flexcol" autocomplete="off">
  <header>
    <h1>
      <input name="name" type="text" value="{{name}}" placeholder="{{localize "PF1.Name"}}" data-tooltip="Name">
    </h1>
  </header>

  <div class="form-group stacked command">
    <label>
      {{localize "PF1.Command"}}
      <a class="help-browser" data-url="Help/Items/Script-Calls">
        <i class="far fa-question-circle"></i>
      </a>
    </label>
    <textarea name="command" spellcheck="false">{{command}}</textarea>
  </div>

  <footer class="sheet-footer flexrow">
    <button type="submit">
      <i class="fas fa-save"></i>
      {{localize "PF1.Save"}}
    </button>
  </footer>
</form>
