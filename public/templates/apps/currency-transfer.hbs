<form class="currency-transfer" data-tooltip-class="pf1" autocomplete="off">
    <div class="form-group">
      <label>{{localize "PF1.Currency.Full.pp"}}</label>
      <div class="form-fields">
        <button class="cur-range down" type="button" data-tooltip="PF1.None" tabindex="-1">
          <i class="fas fa-arrow-alt-circle-down"></i>
        </button>
        <input type="number" name="pp" placeholder="0" value="{{dest.amount.pp}}" data-dtype="Number">
        <label>/</label>
        <span class="text-box readonly">{{source.amount.pp}}</span>
        <button class="cur-range up" type="button" data-tooltip="PF1.All" tabindex="-1">
          <i class="fas fa-arrow-alt-circle-up"></i>
        </button>
      </div>
    </div>

    <div class="form-group">
      <label>{{localize "PF1.Currency.Full.gp"}}</label>
      <div class="form-fields">
        <button class="cur-range down" type="button" data-tooltip="PF1.None" tabindex="-1">
          <i class="fas fa-arrow-alt-circle-down"></i>
        </button>
        <input type="number" name="gp" placeholder="0" value="{{dest.amount.gp}}" data-dtype="Number">
        <label>/</label>
        <span class="text-box readonly">{{source.amount.gp}}</span>
        <button class="cur-range up" type="button" data-tooltip="PF1.All" tabindex="-1">
          <i class="fas fa-arrow-alt-circle-up"></i>
        </button>
      </div>
    </div>

    <div class="form-group">
      <label>{{localize "PF1.Currency.Full.sp"}}</label>
      <div class="form-fields">
        <button class="cur-range down" type="button" data-tooltip="PF1.None" tabindex="-1">
          <i class="fas fa-arrow-alt-circle-down"></i>
        </button>
        <input type="number" name="sp" placeholder="0" value="{{dest.amount.sp}}" data-dtype="Number">
        <label>/</label>
        <span class="text-box readonly">{{source.amount.sp}}</span>
        <button class="cur-range up" type="button" data-tooltip="PF1.All" tabindex="-1">
          <i class="fas fa-arrow-alt-circle-up"></i>
        </button>
      </div>
    </div>

    <div class="form-group">
      <label>{{localize "PF1.Currency.Full.cp"}}</label>
      <div class="form-fields">
        <button class="cur-range down" type="button" data-tooltip="PF1.None" tabindex="-1">
          <i class="fas fa-arrow-alt-circle-down"></i>
        </button>
        <input type="number" name="cp" placeholder="0" value="{{dest.amount.cp}}" data-dtype="Number">
        <label>/</label>
        <span class="text-box readonly">{{source.amount.cp}}</span>
        <button class="cur-range up" type="button" data-tooltip="PF1.All" tabindex="-1">
          <i class="fas fa-arrow-alt-circle-up"></i>
        </button>
      </div>
    </div>

    <div class="form-group currency-total">
      <label>{{localize "PF1.Total"}}</label>
      <div class="form-fields">
        <label></label>
        <label>/</label>
        <label>{{localize "PF1.Currency.Inline.gp" value=total}}</label>
      </div>
    </div>

    <button type="submit" class="submit">
        <i class="fas fa-save"></i> {{localize "PF1.Application.CurrencyTransfer.Send"}}
    </button>
</form>
